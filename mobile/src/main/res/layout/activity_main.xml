<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <Switch android:id="@+id/metric" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Metric" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <Switch android:id="@+id/twenty_four" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="24HR Clock" android:layout_below="@+id/metric" android:layout_alignRight="@+id/metric" android:layout_alignParentLeft="true"/>
    <Switch android:id="@+id/euro" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Day/Month/Year" android:layout_below="@+id/twenty_four" android:layout_alignRight="@+id/twenty_four" android:layout_alignParentLeft="true"/>


    <Space android:id="@+id/space" android:layout_width="wrap_content" android:layout_height="60dp" android:layout_below="@+id/euro" android:layout_alignRight="@+id/euro" android:layout_alignParentLeft="true"/>


    <TextView android:id="@+id/apikeytext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your openweathermap API key" android:layout_below="@+id/space" android:layout_alignRight="@+id/space" android:layout_alignParentLeft="true"/>
    <EditText android:id="@+id/apikey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="api key for openweathermap" android:layout_below="@+id/apikeytext" android:layout_alignRight="@+id/apikeytext" android:layout_alignParentLeft="true"/>



</RelativeLayout>
